<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot_arm">
  <xacro:property name="PI" value="3.141592653589793"/>
  <material name="orange"><color rgba="1 0.55 0 1"/></material>
  <material name="grey"><color rgba="0.6 0.6 0.6 1"/></material>

  <!-- base -->
  <link name="base_link">
    <visual><geometry><cylinder radius="0.1" length="0.05"/></geometry></visual>
  </link>

  <!-- link 1 -->
  <link name="link_1">
    <visual><origin xyz="0 0 0.1"/><geometry><cylinder radius="0.05" length="0.2"/></geometry><material name="orange"/></visual>
  </link>
  <joint name="joint_1" type="revolute">
    <parent link="base_link"/><child link="link_1"/>
    <origin xyz="0 0 0.025"/><axis xyz="0 0 1"/>
    <limit lower="-${PI}" upper="${PI}" effort="50" velocity="1"/>
  </joint>

  <!-- link 2 -->
  <link name="link_2">
    <visual><origin xyz="0 0 0.1"/><geometry><cylinder radius="0.04" length="0.2"/></geometry><material name="grey"/></visual>
  </link>
  <joint name="joint_2" type="revolute">
    <parent link="link_1"/><child link="link_2"/>
    <origin xyz="0 0 0.2"/><axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="50" velocity="1"/>
  </joint>

  <!-- link 3 -->
  <link name="link_3">
    <visual><origin xyz="0 0 0.075"/><geometry><cylinder radius="0.03" length="0.15"/></geometry><material name="orange"/></visual>
  </link>
  <joint name="joint_3" type="revolute">
    <parent link="link_2"/><child link="link_3"/>
    <origin xyz="0 0 0.2"/><axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="30" velocity="1"/>
  </joint>

  <!-- end-effector -->
  <link name="end_effector">
    <visual><origin xyz="0 0 0.025"/><geometry><box size="0.06 0.06 0.05"/></geometry></visual>
  </link>
  <joint name="ee_fixed" type="fixed">
    <parent link="link_3"/><child link="end_effector"/><origin xyz="0 0 0.15"/>
  </joint>
</robot>
